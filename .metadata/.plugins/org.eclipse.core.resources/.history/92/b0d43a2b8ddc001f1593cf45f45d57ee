package com.core;

import java.util.List;

import org.hibernate.Query;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;

public class SelectData_Employee_DAO {

    public static void main(String[] args) {
        // Configure Hibernate
        Configuration con = new Configuration();
        con.configure("hibernate.cfg.xml"); // Ensure this file is properly configured
        SessionFactory sf = con.buildSessionFactory();

        Session session = null;
        Transaction transaction = null;

        try {
            // Open session and begin transaction
            session = sf.openSession();
            transaction = session.beginTransaction();

            // Create HQL query to fetch data from Employee entity
            Query query = session.createQuery("from Employee"); // "Employee" should match the entity class name
            List<Employee> employeeList = query.list(); // Cast results to List<Employee>

            // Iterate over the result and print each Employee
            for (Employee emp : employeeList) {
                System.out.println("ID: " + emp.getId() + ", Name: " + emp.getFname() + ", Salary: " + emp.getLname());
            }

            // Commit the transaction
            transaction.commit();
        } catch (Exception e) {
            // Rollback transaction in case of error
            if (transaction != null) {
                transaction.rollback();
            }
            e.printStackTrace();
        } finally {
            // Close session and factory
            if (session != null) {
                session.close();
            }
            sf.close();
        }
    }
}
